<h1>Discounted items:</h1>

<% @products.each_slice(3) do |three_products| %>
<div class="row">
  <% three_products.each do |product|%>
    <div class="col-md-4">
      <div class="well">
        <a href="/show/<%= product.id %>" name=<%= product.id %>>
          <h1><%= "#{product.name}" %></h1>
        </a>
        <p><%= product.description %></p>
        <img class="product-image" src=<%= product.images[0].url %> name=<%= product.id %>>
      </div>
    </div>
  <% end %>
</div>
<% end %>