<h1>Create new product</h1>
<% if @product.errors.any? %>
 <div id="error_explanation">
   <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
   <ul>
   <% @product.errors.full_messages.each do |msg| %>
     <li><%= msg %></li>
   <% end %>
   </ul>
 </div>
<% end %>
<%= form_tag "/products/create_product", method: :post do %>
<div>
  Product name: <input style="width: 50%;" type="text" class="form-control" name="product_name" value=<%= @product.name %>>
</div>
<div>
  Prouduct price: <input style="width: 50%;"  type="text" class="form-control" name="product_price" value=<%= @product.price %>>
</div>
<div>
  Product image(url): <input style="width: 50%;" type="text" class="form-control" name="url" value=<%= @product.images[0] %>>
</div>
<div>
  Product description: <input style="width: 50%;" type="text" class="form-control" name="product_description" value=<%= @product.description %>>
</div>
<div>
  Supplier: 
  <select name="supplier" >
    <% Supplier.all.each do |supplier| %>
      <option value=<%= supplier.name %>><%= supplier.name %></option>
    <% end %>
  </select>
</div>
<div>
  Categories:
  <select name="categories" multiple="multiple">
    <% Category.all.each do |category| %>
      <option value=<%= category.name %>><%= category.name %></option>
    <% end %>
  </select>
</div>
  <input type="submit" class="btn btn-default" value="create product">
<% end %>