<h1>Create new product</h1>

<%= form_tag "/products/create_product", method: :post do %>
<div>
  Product name: <input type="text" class="form-control" name="product_name">
</div>
<div>
  Prouduct price: <input type="text" class="form-control" name="product_price">
</div>
<div>
  Product image(url): <input type="text" class="form-control" name="url">
</div>
<div>
  Product description: <input type="text" class="form-control" name="product_description">
</div>
<div>
  Supplier: <input type="text" class="form-control" name="supplier">
</div>
<div>
  Categories:
  <select name="categories" multiple="multiple">
    <% Category.all.each do |category| %>
      <option value=<%= category.name %>><%= category.name %></option>
    <% end %>
  </select>
</div>
  <input type="submit" class="btn btn-default" value="create product">
<% end %>