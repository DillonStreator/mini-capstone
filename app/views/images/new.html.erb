<h1>Add new image</h1>
<p>For <%= @product.name %></p>
<%= form_tag "/images/create", method: :post do %>
  <div>
    Product image(url): <input type="text" class="form-control" name="url">
  </div>
  <input type="hidden" name="id" value=<%= @product.id %>>
  <input type="submit" class="btn btn-default" value="Add image">
<% end %>